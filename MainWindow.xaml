<Window x:Class="MegaDiffView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegaDiffView"
        mc:Ignorable="d"
        Icon=".\App.ico"
        Title="Mega DiffView!" Height="600" Width="1000">
  <DockPanel>
    <Menu DockPanel.Dock="Top" Background="#F0F0FF">
      <MenuItem Header="_File">
        <MenuItem Header="_Open" Click="MenuItem_OnClick" />
      </MenuItem>
    </Menu>
    <Grid Margin="10">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="300" />
      </Grid.ColumnDefinitions>
      <WebBrowser x:Name="Browser">
      </WebBrowser>
      <GridSplitter Grid.Column="1" Margin="2,0,2,0"
                  Width="3" Background="LightSteelBlue" 
                  VerticalAlignment="Stretch" 
                  HorizontalAlignment="Center" />
      <ListBox Grid.Column="2" SelectedItem="{Binding SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding FileNames}" 
             Width="auto" HorizontalAlignment="Stretch"  />
    </Grid>
  </DockPanel>
</Window>
